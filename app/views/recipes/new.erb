<div class="col-md-6 offset-md-3">
  <h1>Create Recipe</h1>
  <form class="" action="/recipes" method="post">
    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" class="form-control" placeholder="Apple Pie">
    </div>
    <div class="form-group">
      <label>Description</label>
      <input type="text" name="description" class="form-control" placeholder="Apple pie is..">
    </div>
    <div class="form-group">
      <label>Ingredients</label>
      <input type="text" name="ingredient" class="form-control" placeholder="2 eggs 1 cup sugar ...">
    </div>
    <div class="form-group">
      <label>Directions</label>
      <input type="text" name="directions" class="form-control" placeholder="mix flavour 5min with eggs..">
    </div>
    <div class="form-group">
      <label>Upload Image</label>
    </div>
    <input type="submit" value="Create Recipe" class="btn btn-primary">
  </form>
</div>
